<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/chat_message_bubble_bg"
        android:minWidth="200dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/chatSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="You"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/chatSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatSenderName"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Sent message"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sentChatTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chatSentMessage"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Sent message"
            android:textColor="@color/gray_700"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>